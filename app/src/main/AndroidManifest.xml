<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vr.app">

    <application
        android:name="org.vr.app.ExampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.vr.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.vr.app.activities.several.screen.splash.SplashActivity"
            android:theme="@style/SplashTheme"/>

        <activity android:name="org.vr.app.activities.several.screen.home.HomeActivity"
            android:label="Home Screen"/>

    </application>

</manifest>